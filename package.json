{
  "name": "flecode",
  "displayName": "PrettyFLE",
  "repository": "https://github.com/xssfox/flecode.git",
  "description": "FLE Viewer. flecli must be installed first",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "publisher": "xssfox",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onFileSystem:flecode.pretty"
  ],
  "contributes": {
    "configuration": {
      "title": "PrettyFLE",
      "properties": {
        "flecode.flecliPath": {
          "type": "string",
          "default": "flecli",
          "description": "The path to the flecli command line."
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "flecode.showPrettyToSide",
          "alt": "flecode.showPrettyToSide",
          "when": "editorLangId == fle",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "fle",
        "extensions": [
          ".fle",
          ".txt",
          ".log"
        ]
      }
    ],
    "grammars": [
      {
        "language": "fle",
        "scopeName": "source.fle",
        "path": "./syntaxes/fle.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "flecode.showPrettyToSide",
        "title": "Open Preview to the Side",
        "category": "FLE Preview Text",
        "icon": "$(open-preview)"
      },
      {
        "command": "flecode.exportADIF",
        "title": "Export log to ADIF",
        "category": "FLE"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "esbuild": "^0.18.6",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^10.2.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
